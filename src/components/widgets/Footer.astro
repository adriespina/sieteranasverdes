<footer class="relative border-t border-brand-200 bg-brand-50">
  <div
    class="absolute inset-x-0 top-0 h-px bg-gradient-to-r from-brand-200 via-brand-300 to-brand-200"
  >
  </div>
  <div
    class="mx-auto flex max-w-6xl flex-col gap-8 px-4 py-10 md:flex-row md:items-center md:justify-between md:py-12"
  >
    <!-- Izquierda: logo + textos -->
    <div class="flex items-start gap-4">
      <img
        src="/logo.svg?v=3"
        alt="Siete Ranas Verdes"
        class="h-16 w-16 rounded-none object-contain md:h-20 md:w-20"
      />
      <div>
        <p class="text-2xl font-bold leading-tight text-brand-900 md:text-3xl">
          Siete Ranas Verdes
        </p>
        <p class="text-base text-gray-700 md:text-lg">Vanessa Gonzalez Suarez</p>
        <p class="text-sm text-gray-600 md:text-base">Traves√≠a del Poste, 1, Bajo. Navia</p>
      </div>
    </div>

    <!-- Derecha: Instagram grande -->
    <div class="flex md:justify-end">
      <a
        href="https://www.instagram.com/siete_ranas_verdes"
        target="_blank"
        rel="noopener"
        aria-label="Instagram de Siete Ranas Verdes"
        class="text-brand-700 transition-colors hover:text-brand-800"
        title="@siete_ranas_verdes"
      >
        <!-- Icono Instagram en SVG (escala con Tailwind) -->
        <svg viewBox="0 0 24 24" class="h-10 w-10 md:h-12 md:w-12" aria-hidden="true">
