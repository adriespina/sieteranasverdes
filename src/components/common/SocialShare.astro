---
import { Icon } from "astro-icon/components";

export interface Props {
  text: string;
  url: string | URL;
  class?: string;
}

const { text, url, class: className = "inline-block" } = Astro.props;
---

<div class={className}>
  <span class="align-super font-bold text-slate-500 dark:text-slate-400">Comparte:</span>
  <button
    class="ml-2 rtl:ml-0 rtl:mr-2"
    title="Compartir en Twitter"
    data-aw-social-share="twitter"
    data-aw-url={url}
    data-aw-text={text}
    ><Icon
      name="tabler:brand-x"
      class="h-6 w-6 text-gray-400 hover:text-black dark:text-slate-500 dark:hover:text-slate-300"
    />
  </button>
  <button
    class="ml-2 rtl:ml-0 rtl:mr-2"
    title="Compartir en Facebook"
    data-aw-social-share="facebook"
    data-aw-url={url}
    ><Icon
      name="tabler:brand-facebook"
      class="h-6 w-6 text-gray-400 hover:text-black dark:text-slate-500 dark:hover:text-slate-300"
    />
  </button>
  <button
    class="ml-2 rtl:ml-0 rtl:mr-2"
    title="Compartir en LinkedIn"
    data-aw-social-share="linkedin"
    data-aw-url={url}
    data-aw-text={text}
    ><Icon
      name="tabler:brand-linkedin"
      class="h-6 w-6 text-gray-400 hover:text-black dark:text-slate-500 dark:hover:text-slate-300"
    />
  </button>
  <button
    class="ml-2 rtl:ml-0 rtl:mr-2"
    title="Compartir en WhatsApp"
    data-aw-social-share="whatsapp"
    data-aw-url={url}
    data-aw-text={text}
    ><Icon
      name="tabler:brand-whatsapp"
      class="h-6 w-6 text-gray-400 hover:text-black dark:text-slate-500 dark:hover:text-slate-300"
    />
  </button>
  <button
    class="ml-2 rtl:ml-0 rtl:mr-2"
    title="Compartir por correo"
    data-aw-social-share="mail"
    data-aw-url={url}
    data-aw-text={text}
    ><Icon
      name="tabler:mail"
      class="h-6 w-6 text-gray-400 hover:text-black dark:text-slate-500 dark:hover:text-slate-300"
    />
  </button>
</div>
