---
export interface Props {
  url: string; // p.ej. https://soundcloud.com/usuario/mi-pista
  color?: string; // hex sin #, ej. "1f7a45"
}

const { url, color = "1f7a45" } = Astro.props as Props;
const src = `https://w.soundcloud.com/player/?url=${encodeURIComponent(url)}&color=%23${color}&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&visual=false`;
---

<div class="relative w-full overflow-hidden rounded-2xl shadow ring-1 ring-black/5">
  <iframe
    width="100%"
    height="166"
    allow="autoplay"
    src={src}
    title="SoundCloud player"
    loading="lazy"
    class="w-full border-0"></iframe>
</div>
