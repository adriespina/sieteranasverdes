---
import Layout from '~/layouts/PageLayout.astro';

const metadata = { title: 'Vanessa' };
---

<Layout metadata={metadata}>
  <section class="py-16 md:py-24">
    <div class="container mx-auto px-6 max-w-5xl">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-brand-700">Vanessa</h1>
      <p class="text-lg text-muted mb-8">Conoce a Vanessa y su camino en el bienestar.</p>
      <img src="/img/vanessa-hero.jpg" alt="Vanessa" class="w-full rounded-2xl shadow-lg" loading="eager" />
    </div>
  </section>
</Layout>
