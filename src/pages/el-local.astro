---
import Layout from "~/layouts/PageLayout.astro";

const metadata = { title: "Nuestra Sala" };
---

<Layout metadata={metadata}>
  <section class="py-16 md:py-24">
    <div class="container mx-auto max-w-5xl px-6">
      <h1 class="mb-4 text-4xl font-bold text-brand-700 md:text-5xl">Nuestra Sala</h1>
      <p class="mb-8 text-lg text-muted">Nuestro espacio para clases, talleres y encuentros.</p>
      <img
        src="/img/el-local-hero.jpg"
        alt="Nuestra sala"
        class="w-full rounded-2xl shadow-lg"
        loading="eager"
      />
    </div>
  </section>
</Layout>
