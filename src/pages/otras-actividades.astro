---
import Layout from "~/layouts/PageLayout.astro";

const metadata = { title: "Otras actividades" };
---

<Layout metadata={metadata}>
  <section class="py-16 md:py-24">
    <div class="container mx-auto max-w-5xl px-6">
      <h1 class="mb-4 text-4xl font-bold text-brand-700 md:text-5xl">Otras actividades</h1>
      <p class="mb-8 text-lg text-muted">
        Talleres, encuentros y experiencias para tu bienestar integral.
      </p>
      <img
        src="/img/otras-hero.jpg"
        alt="Otras actividades"
        class="w-full rounded-2xl shadow-lg"
        loading="eager"
      />
    </div>
  </section>
</Layout>
