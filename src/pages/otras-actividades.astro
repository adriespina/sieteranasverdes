---
import Layout from '~/layouts/PageLayout.astro';

const metadata = { title: 'Otras actividades' };
---

<Layout metadata={metadata}>
  <section class="py-16 md:py-24">
    <div class="container mx-auto px-6 max-w-5xl">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-brand-700">Otras actividades</h1>
      <p class="text-lg text-muted mb-8">Talleres, encuentros y experiencias para tu bienestar integral.</p>
      <img src="/img/otras-hero.jpg" alt="Otras actividades" class="w-full rounded-2xl shadow-lg" loading="eager" />
    </div>
  </section>
</Layout>
